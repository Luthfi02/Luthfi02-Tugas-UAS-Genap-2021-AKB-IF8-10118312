<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/print" />
    <TextView
        android:id="@+id/textprofil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25dp"
        android:text="profile"
        android:textAllCaps="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/iconnama"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/textprofil"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/ic_baseline_perm_identity_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iconnama"
        app:layout_constraintStart_toStartOf="@id/iconnama"
        app:layout_constraintEnd_toEndOf="@id/iconnama"
        android:text="NAMA"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iconnama"
        app:layout_constraintTop_toTopOf="@id/iconnama"
        app:layout_constraintStart_toEndOf="@id/iconnama"
        android:text="Luthfi Rifqi Zulfiqar"
        android:layout_marginStart="10dp"
        android:textSize="17dp"
        />
    <ImageView
        android:id="@+id/iconnim"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/iconnama"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/ic_baseline_menu_book_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iconnim"
        app:layout_constraintStart_toStartOf="@id/iconnama"
        app:layout_constraintEnd_toEndOf="@id/iconnama"
        android:text="NIM"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iconnim"
        app:layout_constraintTop_toTopOf="@id/iconnim"
        app:layout_constraintStart_toEndOf="@id/iconnim"
        android:text="10118312"
        android:layout_marginStart="10dp"
        android:textSize="17dp"/>
    <ImageView
        android:id="@+id/iconkelas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/iconnim"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/ic_baseline_class_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iconkelas"
        app:layout_constraintStart_toStartOf="@id/iconnama"
        app:layout_constraintEnd_toEndOf="@id/iconnama"
        android:text="KELAS"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iconkelas"
        app:layout_constraintTop_toTopOf="@id/iconkelas"
        app:layout_constraintStart_toEndOf="@id/iconkelas"
        android:text="IF 8"
        android:layout_marginStart="10dp"
        android:textSize="17dp"/>
    <ImageView
        android:id="@+id/iconemail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/iconkelas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/ic_baseline_email_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iconemail"
        app:layout_constraintStart_toStartOf="@id/iconnama"
        app:layout_constraintEnd_toEndOf="@id/iconnama"
        android:text="EMAIL"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iconemail"
        app:layout_constraintTop_toTopOf="@id/iconemail"
        app:layout_constraintStart_toEndOf="@id/iconemail"
        android:text="luthfi.rz.lrz@gmail.com"
        android:layout_marginStart="10dp"
        android:textSize="17dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>